{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Life Expectancy",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://kya10210.github.io/FIT3179/js/eu.json",
    "format": {
          "type": "topojson",
          "feature": "eu"
        }
  },
  "transform": [{
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://kya10210.github.io/FIT3179/data/life_expectancy_2016.csv"
        },
        "key": "country",
        "fields": ["life_expect"]
      }
    },
    {"calculate": "datum.life_expect + 0.1", "as": "Life Expect"}
  ],
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape"
    },
  "encoding": {
    "color": {
      "field": "Life Expect",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "Country"},
      {"field": "life_expect", "type": "quantitative"}
    ]
  }

}
